rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default: Deny all access
    match /{document=**} {
      allow read, write: if false;
    }
    
    // User data: Only authenticated users can read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Donations: Authenticated users can create and read
    match /donations/{donationId} {
      // Anyone authenticated can read donations (for public leaderboard)
      allow read: if request.auth != null;
      
      // Only authenticated users can create donations
      allow create: if request.auth != null 
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.timestamp == request.time;
      
      // Donations are immutable - no updates or deletes allowed
      allow update, delete: if false;
    }
    
    // Student data: Read-only for authenticated users
    match /students/{studentId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins should write, configure separately
    }
    
    // Admin verification: Only admins can update
    match /verifications/{verificationId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
